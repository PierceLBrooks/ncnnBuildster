<?xml version="1.0" encoding="UTF-8"?>
<buildster directory="build" distribution="../Distribution">
  <project directory="../Project">
    <dependencies>
      <dependency>
        <label>sfml</label>
        <subpath>build</subpath>
        <remote>
          <url>https://github.com/SFML/SFML.git</url>
          <git_repo>
            <branch>2.5.1</branch>
            <credentials>
              <username>username</username>
              <password>password</password>
            </credentials>
          </git_repo>
        </remote>
        <build>
          <arguments></arguments>
          <cmake>
            <generator>
              <switch id="BUILDSTER_OS">
                <case check="Windows">Visual Studio 16 2019</case>
                <case check="Linux">Unix Makefiles</case>
                <case check="Darwin">Xcode</case>
                <default><quit></quit></default>
              </switch>
            </generator>
            <source>..</source>
          </cmake>
        </build>
        <exports>
          <export type="all">
            <key>SFML_PATH</key>
            <value><install></install></value>
          </export>
          <export type="headers">
            <key>SFML_INCLUDE_PATH</key>
            <value><install></install>/include</value>
          </export>
          <export type="libraries">
            <key>SFML_LIBRARIES_PATH</key>
            <value><install></install>/lib</value>
          </export>
        </exports>
        <imports></imports>
      </dependency>
      <dependency>
        <label>ncnn</label>
        <subpath>build</subpath>
        <remote>
          <url>https://github.com/Tencent/ncnn.git</url>
          <git_repo>
            <branch>master</branch>
            <credentials>
              <username>username</username>
              <password>password</password>
            </credentials>
          </git_repo>
        </remote>
        <build>
          <pre>
            <build>
              <shells>
                <shell>
                  <work><origin></origin></work>
                  <commands>
                    <if_check id="BUILDSTER_OS" check="Darwin">
                      <command>
                        <set>
                          <key>VULKAN_SDK</key>
                          <value><home></home>/VulkanSDK/1.3.224.1/macOS</value>
                        </set>
                      </command>
                    </if_check>
                    <command>
                      <set>
                        <key>Protobuf_ROOT</key>
                        <value>
                          <switch id="BUILDSTER_OS">
                            <case check="Windows"><home></home>/protobuf</case>
                            <case check="Linux">/usr/lib/protobuf</case>
                            <case check="Darwin">/usr/local/opt/protobuf</case>
                            <default><quit></quit></default>
                          </switch>
                        </value>
                      </set>
                    </command>
                  </commands>
                </shell>
              </shells>
            </build>
          </pre>
          <arguments>
            <if_check id="BUILDSTER_OS" check="Darwin">
              <argument>-DVulkan_INCLUDE_DIR=<data id="VULKAN_SDK"></data>/../MoltenVK/include</argument>
              <argument>-DVulkan_LIBRARY=<data id="VULKAN_SDK"></data>/../MoltenVK/dylib/macOS/libMoltenVK.dylib</argument>
            </if_check>
            <argument>-DNCNN_VULKAN=ON</argument>
            <argument>-DCMAKE_POLICY_DEFAULT_CMP0074=NEW</argument>
          </arguments>
          <cmake>
            <generator>
              <switch id="BUILDSTER_OS">
                <case check="Windows">Visual Studio 16 2019</case>
                <case check="Linux">Unix Makefiles</case>
                <case check="Darwin">Xcode</case>
                <default><quit></quit></default>
              </switch>
            </generator>
            <source>..</source>
          </cmake>
        </build>
        <exports>
          <export type="all">
            <key>NCNN_PATH</key>
            <value><install></install></value>
          </export>
          <export type="headers">
            <key>NCNN_INCLUDE_PATH</key>
            <value><install></install>/include</value>
          </export>
          <export type="libraries">
            <key>NCNN_LIBRARIES_PATH</key>
            <value><install></install>/lib</value>
          </export>
          <if_check id="BUILDSTER_OS" check="Darwin">
            <export type="headers">
              <key>VULKAN_INCLUDE_PATH</key>
              <value><data id="VULKAN_SDK"></data>/../MoltenVK/include</value>
            </export>
            <export type="libraries">
              <key>VULKAN_LIBRARIES_PATH</key>
              <value><data id="VULKAN_SDK"></data>/../MoltenVK/dylib/macOS</value>
            </export>
          </if_check>
          <if_check id="BUILDSTER_OS" check="Windows">
            <export type="headers">
              <key>VULKAN_INCLUDE_PATH</key>
              <value><data id="VULKAN_SDK"></data>/Include</value>
            </export>
            <export type="libraries">
              <key>VULKAN_LIBRARIES_PATH</key>
              <value><data id="VULKAN_SDK"></data>/Lib</value>
            </export>
          </if_check>
        </exports>
        <imports></imports>
      </dependency>
    </dependencies>
    <targets>
      <target type="executable">
        <label>example</label>
        <generator>
          <switch id="BUILDSTER_OS">
            <case check="Windows">Visual Studio 16 2019</case>
            <case check="Linux">CodeBlocks - Unix Makefiles</case>
            <case check="Darwin">Xcode</case>
            <default><quit></quit></default>
          </switch>
        </generator>
        <definitions></definitions>
        <links>
          <if_check id="BUILDSTER_OS" check="Darwin">
            <link>Molten*</link>
          </if_check>
          <if_check id="BUILDSTER_OS" check="Windows">
            <link>setupapi</link>
            <link>setupapi</link>
            <link>iphlpapi</link>
            <link>psapi</link>
            <link>userenv</link>
            <link>gdi32</link>
            <link>crypt32</link>
            <link>ws2_32</link>
            <link>MachineIndependent*</link>
            <link>GenericCodeGen*</link>
            <link>OSDependent*</link>
            <link>OGLCompiler*</link>
            <link>SPIRV*</link>
            <link>glslang*</link>
            <link>vulkan*</link>
          </if_check>
          <link>ncnn*</link>
          <link>sfml-graphics*</link>
          <link>sfml-window*</link>
          <link>sfml-audio*</link>
          <link>sfml-network*</link>
          <link>sfml-system*</link>
        </links>
        <imports>
          <import>sfml</import>
          <import>ncnn</import>
        </imports>
      </target>
    </targets>
    <post>
      <shells>
        <shell>
          <work><distribution></distribution></work>
          <commands>
            <command>
              <copy>
                <from><distribution></distribution>/../../rmono.ttf</from>
                <to><distribution></distribution></to>
              </copy>
            </command>
            <command>
              <copy>
                <from><distribution></distribution>/../../ncnn.bin</from>
                <to><distribution></distribution></to>
              </copy>
            </command>
            <command>
              <copy>
                <from><distribution></distribution>/../../ncnn.param</from>
                <to><distribution></distribution></to>
              </copy>
            </command>
            <if_check id="BUILDSTER_OS" check="Windows">
              <command>
                <copy>
                  <from>C:/Windows/System32/vulkan-1-1-*</from>
                  <to><distribution></distribution></to>
                  <rename>vulkan-1.dll</rename>
                </copy>
              </command>
            </if_check>
          </commands>
        </shell>
      </shells>
    </post>
  </project>
</buildster>
